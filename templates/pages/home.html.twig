{% extends 'base.html.twig' %}

{% block title 'Dcorroyer' %}

{% block body %}
    <div class="jumbotron text-center">
        <h1>Bienvenue</h1>
    </div>

    <div class="container">
        <h2>Les projets</h2>
        <div class="row flex">
            {% for project in projects %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">
                                <a href="{{ path('project.show', {id: project.id, slug: project.slug}) }}">{{ project.title }}</a>
                            </h3>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}