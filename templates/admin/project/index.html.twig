{% extends 'base.html.twig' %}

{% block title %}Admin Project index{% endblock %}

{% block body %}

  <h1>Admin Project index</h1>

  <table class="table">
    <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for project in projects %}
      <tr>
        <td>{{ project.id }}</td>
        <td>{{ project.title }}</td>
        <td>{{ project.description }}</td>
        <td>
          <a href="{{ path('admin_project_edit', {'id': project.id}) }}">edit</a>
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="4">no records found</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <a href="{{ path('admin_project_new') }}">Create new</a>

{% endblock body%}
