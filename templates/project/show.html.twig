{% extends 'base.html.twig' %}

{% block title project.title %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    {% if project.filename %}
                        <img src="{{ vich_uploader_asset(project, 'thumbFile') }}" alt="" class="card-img-top" style="width: 100%; height: auto;">
                    {% else %}
                        <img src="{{ '../images/empty.jpg' }}" alt="" class="card-img-top" style="width: 100%; height: auto;">
                    {% endif %}
                </div>
                <div class="col-md-4">
                    <h1>{{ project.title }}</h1>
                    <h4>{{ project.description | raw }}</h4>
                    <a href="#" class="btn btn-primary">Visiter le site web</a>
                    {% if app.user %}
                        <a href="{{ path('admin.project.edit', {id: project.id}) }}" class="btn btn-secondary">Editer le projet</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}