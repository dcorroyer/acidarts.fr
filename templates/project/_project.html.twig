<div class="flex-item">
  <div class="flex-content">
    <div class="identification">
      <p class="title"><a href="{{ path('project_show', {slug: project.slug}) }}">{{ project.title }}</a></p>
      <p class="type">{{ project.type }}</p>
    </div>
    <div class="img">
      <figure class="snip1573">
        {% if project.filename %}
          <img src="{{ vich_uploader_asset(project, 'thumbFile') | imagine_filter('thumb') }}" alt="imgprvw">
        {% else %}
          <img src="{{ 'images/empty.jpg' }}" alt="imgprvw">
        {% endif %}
        <figcaption>
          <h3>+</h3>
        </figcaption>
        <a href="{{ path('project_show', {slug: project.slug}) }}"></a>
      </figure>
    </div>
  </div>
</div>
